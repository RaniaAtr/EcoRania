{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-success shadow">
            <div class="card-header bg-success text-white">
                <h1 class="h4 mb-0">Paiement réussi !</h1>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </div>

                <h2 class="text-center">Merci pour votre achat !</h2>

                <div class="alert alert-success mt-4">
                    <h5>Détails de la commande :</h5>
                    <ul class="list-unstyled">
                        <li><strong>Activité :</strong> {{ order.activity.titre }}</li>
                        <li><strong>Adresse :</strong> {{ order.activity.adresse }}</li>
                        <li><strong>Montant :</strong> {{ order.amount }} €</li>
                        <li><strong>Date commande :</strong> {{ order.createdAt|date('d/m/Y H:i') }}</li>
                        <li><strong>Date activité :</strong> {{ order.activity.date|date('d/m/Y') }}</li>
                        <li><strong>Durée :</strong> {{ order.activity.duree }}</li>
                    </ul>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
